<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/out.css"/>
    <title>Login</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>
<body>
    
<main class=" mx-auto h-screen">
    <div class="bg-black h-1/2 fixed inset-0 z-0 skew-x-12"></div>
    <div class="h-full flex flex-wrap justify-center items-center z-10">
        <div class="lg:w-1/4 md:1/6 h-5/6 flex justify-center items-center z-10">
            <form
                class="rounded-2xl h-full w-full shadow-md border-gray-200 border flex flex-col items-center p-4" style="background-color: white;"
            >
                <div class="h-2/3 flex flex-col justify-between items-center">
                    <h1 class="text-4xl mt-4 font-bold">Cheers.</h1>

                    <div class="h-2/3 flex flex-col justify-around">
                        <div>
                            <input
                                type="text"
                                class="w-full h-8 rounded-md p-4 mb-2 border-gray-200 border text-sm"
                                placeholder="Email"
                            />
                            <input
                                type="Password"
                                class="w-full rounded-md h-8 p-4 mt-2 border-gray-200 border text-sm"
                                placeholder="Password"
                            />
                            <div class="flex justify-between mt-2">
                                <div class="flex justify-center items-center">
                                    <input type="checkbox" id="showPassword" class="w-4 h-4" />
                                    <label htmlFor="showPassword" class="text-xs ml-1 cursor-pointer">
                                        Show Password
                                    </label>
                                </div>

                                <p class="text-xs text-yellow-400 cursor-pointer">Forgot Password?</p>
                            </div>
                        </div>
                        <a href="/">
                            <button class="h-10 w-full bg-black text-white rounded-md text-sm">Log In</button>
                        </a>
                        <a href="/">
                            <button class="h-10 w-full text-black text-sm mb-6 border border-black hover:bg-black hover:text-white transition-all rounded-md" type="button">
                                Continue as guest
                            </button>
                        </a>
                    </div>
                </div>
                <div class="border-t border-gray-200 w-full h-1/3 flex flex-col items-center justify-between">
                    <p class="text-sm mt-5">Login With</p>
                    <div class="flex">
                        <div
                            class="rounded-full h-12 w-12 shadow-md mr-2 cursor-pointer flex items-center justify-center hover:shadow-lg transition-all"
                            id="googleSignIn"
                        >
                            <span style="font-size: 2rem; color: tomato;">
                                <i class="fab fa-google"></i>
                            </span>
                        </div>
                        <div
                            class="rounded-full h-12 w-12 shadow-md ml-2 cursor-pointer flex items-center justify-center hover:shadow-lg transition-all"
                        >
                            <span style="font-size: 2rem; color: #1977F3;">
                                <i class="fab fa-facebook"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex text-sm">
                        <p>Don't have an Account?</p>
                        <p class="ml-2 text-yellow-400 cursor-pointer">Sign Up</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>

<script type="module">
    const googleSignInButton = document.getElementById("googleSignIn");

    // Import the functions you need from the SDKs you need
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
    import { getAnalytics } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-analytics.js";
    import {getAuth, signInWithPopup, GoogleAuthProvider} from "https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js";
    // TODO: Add SDKs for Firebase products that you want to use
    // https://firebase.google.com/docs/web/setup#available-libraries
  
    // Your web app's Firebase configuration
    // For Firebase JS SDK v7.20.0 and later, measurementId is optional
    const firebaseConfig = {
      apiKey: "AIzaSyCpwnYae8Ipzpn1Eba5h3q2EgmeyeL3Nmo",
      authDomain: "cheers-ejs.firebaseapp.com",
      projectId: "cheers-ejs",
      storageBucket: "cheers-ejs.appspot.com",
      messagingSenderId: "109396595290",
      appId: "1:109396595290:web:f69048267f955ca7ac7e63",
      measurementId: "G-MLMGZKT071"
    };
  
    // Initialize Firebase
    const app = initializeApp(firebaseConfig);
    const analytics = getAnalytics(app);
    const auth = getAuth();
    const provider = new GoogleAuthProvider();

    googleSignInButton.addEventListener("click", async function() {
        const result = await signInWithPopup(auth, provider);
        console.log(result);
    });
</script>

</body>
</html>
<div class="flex lg:flex-row md:flex-col md:w-full sm:flex-col sm:w-full justify-between">
    <div class="flex lg:flex-row lg:items-end lg:justify-between lg:w-3/4 md:flex-col md:w-full sm:flex-col sm:w-full">
        <div class="flex-1 lg:mr-5 md:mr-0 sm:mr-0 flex flex-col justify-between h-full">
            <p class="font-semibold mb-2">Type</p>
            <select class="w-full h-8 bg-white border rounded-md px-2 text-sm">
                <option>Both</option>
                <option>Bars</option>
                <option>Clubs</option>
            </select>
        </div>

        <div class="flex-1 lg:mr-5 md:mr-0 lg:mt-0 md:mt-5 sm:mt-5 flex flex-col justify-between h-full">
            <p class="font-semibold mb-2">Reviews</p>
            <select class="w-full h-8 bg-white border rounded-md px-2 text-sm">
                <option>All</option>
                <option>5 Stars</option>
                <option>4 Stars</option>
                <option>3 Stars</option>
                <option>2 Stars</option>
                <option>1 Star</option>
            </select>
        </div>

        <div class="flex-1 lg:mr-5 md:mr-0 lg:mt-0 md:mt-5 sm:mt-5 flex flex-col justify-between h-full">
            <p class="font-semibold mb-2">Location</p>
            <select class="w-full h-8 bg-white border rounded-md px-2 text-sm">
                <option>Near Me</option>
                <option>Bars</option>
                <option>Clubs</option>
            </select>
        </div>

        <div class="flex-1 lg:mt-0 md:mt-5 sm:mt-5">
            <p class="font-semibold mb-2">Price Range</p>
            <p class="text-sm">P100.00</p>
            <input type="range" class="w-full slider" min="50" max="1000" />
        </div>
    </div>

    <div class="lg:w-1/4 lg:pl-5">
        <div class="flex lg:w-full md:w-full sm:w-full items-end justify-end md:mt-10 sm:mt-10">
            <button class="w-full bg-black text-white font-light h-8 rounded-md hover:bg-gray-700 transition-all text-sm">Apply</button>
        </div>


        <div class="flex items-center justify-center lg:hidden" id="cancelButtonContainer">
            <button
                class="w-full border border-red-400 text-red-400 font-light h-8 rounded-md hover:bg-red-400 hover:text-white mt-2 transition-all text-sm"
                id="cancelButton"
                onclick="cancelButtonClickHandler()"
            >
                Cancel
            </button>
        </div>
    </div>
</div>
